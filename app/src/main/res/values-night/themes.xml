<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAccount" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="buttonTint">@color/light_red</item>
        <item name="hintTextColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="My.EditText.Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="My.Button.Style" parent="Widget.Material3.Button.Icon">
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.MyAccount.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyAccount.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyAccount.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>