<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/dark_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name: "
            android:textColor="@color/mat_white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/manage_fee_class_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Class 1"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/manage_fee_delete_button"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_name_"
            android:textColor="@color/mat_white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manage_fee_class_name_text_view" />

        <TextView
            android:id="@+id/manage_fee_group_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Group 1"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/manage_fee_delete_button"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/manage_fee_class_name_text_view" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fee_amount"
            android:textColor="@color/mat_white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/manage_fee_fee_amount_text_view" />

        <TextView
            android:id="@+id/manage_fee_fee_amount_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="500"
            android:textColor="@color/light_red"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/manage_fee_delete_button"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/manage_fee_group_name_text_view" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month"
            android:textColor="@color/mat_white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manage_fee_fee_amount_text_view" />

        <TextView
            android:id="@+id/manage_fee_fee_month_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="June 2023"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/manage_fee_delete_button"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/manage_fee_fee_amount_text_view" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/manage_fee_delete_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/light_red"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_delete_forever_24"
            app:iconGravity="end"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/manage_fee_edit_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/light_red"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_edit_24"
            app:iconGravity="end"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>